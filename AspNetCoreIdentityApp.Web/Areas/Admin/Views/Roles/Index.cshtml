@model List<RoleViewModel>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Roller</h2>
    </div>
    <div class="col-md-2 ">
        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Roles" asp-action="RoleCreate">Role Ekle</a>
    </div>
</div>

<div class="row">

    <div class="col-md-8 offset-md-2">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Role ismi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a asp-area="Admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                        <td><a asp-area="Admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



