@model UserEditViewModel
@{
    ViewData["Title"] = "UserEdit";
}

<h1>UserEdit</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">


        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                TempData["SuccessMessage"]
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <h2>Kullanıcı Bilgi Güncelleme</h2>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="UserName"></label>
                <div class="col-md-8">
                    <input asp-for="UserName" type="text" class="form-control">
                    <span asp-validation-for="UserName " class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" type="email" class="form-control">
                    <span asp-validation-for="Email " class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Phone"></label>
                <div class="col-md-8">
                    <input asp-for="Phone" type="text" class="form-control">
                    <span asp-validation-for="Phone " class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="BirthDate"></label>
                <div class="col-md-8">
                    <input asp-for="BirthDate"  class="form-control">
                    <span asp-validation-for="BirthDate " class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="City"></label>
                <div class="col-md-8">
                    <input asp-for="City" class="form-control">
                    <span asp-validation-for="City " class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Gender"></label>
                <div class="col-md-8">
                    <select class="form-control" asp-for="Gender" asp-items="ViewBag.genderList">
                        <option value="">Cinsiyet Seçiniz</option>
                    </select>
                    <input asp-for="Gender" class="form-control">
                    <span asp-validation-for="Gender " class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Picture"></label>
                <div class="col-md-8">
                    <input asp-for="Picture" class="form-control">
                    <span asp-validation-for="Picture " class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 offset-4">
                    <button type="submit" class="btn btn-primary">Güncelle</button>

                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
