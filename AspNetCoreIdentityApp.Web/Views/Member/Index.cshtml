@model UserViewModelMember
@{
    ViewData["Title"] = "Index";
}

<h1>Kullanıcı Bilgileri</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
       <user-picture-thumbnail-tag-helpers class="rounded" style="width:300px" picture-url="@Model.PictureUrl"></user-picture-thumbnail-tag-helpers>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Telefon No</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
