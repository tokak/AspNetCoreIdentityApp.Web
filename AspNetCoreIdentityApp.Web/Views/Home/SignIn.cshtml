@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}



<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcı Giriş</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        @* <form  asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post"> url gönderme aşagıdaki ile aynı görevi görür*@
            <form method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input type="password" class="form-control" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="RemembeMe" class="form-check-input">
                        <label class="form-check-label" asp-for="RemembeMe"></label>
                        <span class="text-danger" asp-validation-for="RemembeMe"></span>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <a asp-controller="Home" asp-action="ResetPassword" class="btn btn-outline-secondary btn-sm float-end">Şifremi Unuttum</a>
                </div>
            </div>
          
            <button type="submit" class="btn btn-primary">Üye Giriş</button>
        
        </form>
    </div>
</div>



@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
