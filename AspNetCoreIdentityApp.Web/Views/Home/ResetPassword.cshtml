@model ResetPassordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="alert alert-info">Şifre yenileme linki, e-posta adresinize gönderilecektir.</div>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}